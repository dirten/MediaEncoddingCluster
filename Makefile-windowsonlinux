SVN=svn
SVN_FFMPEG_PARENT="svn://svn.mplayerhq.hu"


all: initialize
	@echo "environment has been initialized"
	@echo "properly. Now you can either:"
	@echo "  - make linux or make win32"


initialize: get-ffmpeg make-ffmpeg


get-ffmpeg:
    [ ! -d ffmpeg ] && ${SVN} checkout ${SVN_FFMPEG_PARENT}/ffmpeg/trunk ffmpeg



make-ffmpeg-linux:
	@cd ffmpeg;./configure;make clean all

make-ffmpeg-win32:
	@cd ffmpeg;./configure;make clean all