<assembly>
  <id>${my.family}-${build_type}</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>source/build/ffmpeg/include</directory>
      <outputDirectory>include</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>source/build/ffmpeg/lib</directory>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>**/*.so</include>
        <include>**/libavcodec.dylib</include>
        <include>**/libavcore.dylib</include>
        <include>**/libavdevice.dylib</include>
        <include>**/libavfilter.dylib</include>
        <include>**/libavformat.dylib</include>
        <include>**/libavutil.dylib</include>
        <include>**/libavswscale.dylib</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>source/build/bin</directory>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>**/*.dll</include>
      </includes>
    </fileSet>
<!--    <fileSet>
      <directory>source/build/ffmpeg/bin</directory>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>-->
  </fileSets>
</assembly>
