<assembly>
  <id>${env.SVN_REVISION}-${my.family}-${build_type}</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>iss/output</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>build</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>**/*.sh</include>
        <include>**/*.dmg</include>
        <include>**/*.exe</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
