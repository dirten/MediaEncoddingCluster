<assembly>
  <id>${my.family}-${build_type}</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>source/build/breakpad/include</directory>
      <outputDirectory>include</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>source/build/breakpad/lib</directory>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>source/build/breakpad/bin</directory>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/checkout/build</directory>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>dump_syms</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
