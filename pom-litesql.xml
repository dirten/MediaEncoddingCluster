<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <profiles>
    <profile>
      <id>win32</id>
      <activation>
        <os>
          <family>windows</family>
          <arch>x86</arch>
        </os>
      </activation>
      <properties>
        <my.family>win32</my.family>
        <target>ntx86</target>
        <BOOST_COMPILER>-vc90</BOOST_COMPILER>
        <MAKE_EXECUTABLE>nmake</MAKE_EXECUTABLE>
        <CMAKE_MAKE_PROGRAM>"NMake Makefiles"</CMAKE_MAKE_PROGRAM>
      </properties>
    </profile>
    <profile>
      <id>linux</id>
      <activation>
        <os>
          <name>Linux</name>
          <family>unix</family>
        </os>
      </activation>
      <properties>
        <my.family>linux</my.family>
        <target>linuxx86</target>
        <BOOST_COMPILER>-gcc41</BOOST_COMPILER>
        <MAKE_EXECUTABLE>make</MAKE_EXECUTABLE>
        <CMAKE_MAKE_PROGRAM>"Unix Makefiles"</CMAKE_MAKE_PROGRAM>
      </properties>
    </profile>
    <profile>
      <id>macosx</id>
      <activation>
        <os>
          <family>mac</family>
        </os>
      </activation>
      <properties>
        <my.family>mac</my.family>
        <target>macosxx86</target>
        <BOOST_COMPILER>-xgcc40</BOOST_COMPILER>
        <MAKE_EXECUTABLE>make</MAKE_EXECUTABLE>
        <CMAKE_MAKE_PROGRAM>"Unix Makefiles"</CMAKE_MAKE_PROGRAM>
      </properties>
    </profile>
    <profile>
      <id>solaris</id>
      <activation>
        <os>
          <name>Solaris</name>
          <family>unix</family>
        </os>
      </activation>
      <properties>
        <my.family>solaris</my.family>
        <target>solaris</target>
        <jambuild>build_dist.sh</jambuild>
        <CMAKE_MAKE_PROGRAM>"Unix Makefiles"</CMAKE_MAKE_PROGRAM>
      </properties>
    </profile>
  </profiles>
  <!--
  <parent>
    <artifactId>JHive</artifactId>
    <groupId>org.esb.jhive</groupId>
    <version>0.1.0</version>
  </parent>-->
  <groupId>org.esb.litesql</groupId>
  <artifactId>litesql</artifactId>
  <version>0.3.8-beta-patch-2</version>
  <name>litesql</name>
  <url>http://maven.apache.org</url>
  <distributionManagement>
    <repository>
      <id>ftp-repository</id>
      <url>ftp://codergrid.de</url>
    </repository>
  </distributionManagement>
  <repositories>
    <repository>
      <id>esb-repo</id>
      <url>http://codergrid.de/repository</url>
    </repository>
  </repositories>
                        
  <build>
    <extensions>
      <!-- Enabling the use of FTP -->
      <extension>
        <groupId>org.apache.maven.wagon</groupId>
        <artifactId>wagon-ftp</artifactId>
        <version>1.0-beta-6</version>
      </extension>
    </extensions>
    <plugins>
    <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>unpack-dependencies</id>
            <phase>compile</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <includeTypes>zip</includeTypes>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.4</version>
        <dependencies>
          <dependency>
            <groupId>org.apache.ant</groupId>
            <artifactId>ant-junit</artifactId>
            <version>1.8.1</version>
          </dependency>
        </dependencies>
        <executions>
          <execution>
            <phase>compile</phase>
            <configuration>
              <tasks>
                <mkdir dir="source"/>
                <mkdir dir="source/build"/>
                <mkdir dir="win32"/>
                <get src="http://downloads.sourceforge.net/project/litesql/litesql/0.3.8/litesql-src-0.3.8.tar.gz"
                     dest="source/litesql-src-0.3.8.tar.gz"
                     verbose="true" usetimestamp="true"/>
                <gunzip src="source/litesql-src-0.3.8.tar.gz" dest="source"/>
		    <untar src="source/litesql-src-0.3.8.tar" dest="source" overwrite="true"/>
                <mkdir dir="source/litesql-src-0.3.8/build"/>
<!--                <patch patchfile="src/patch/litesql_library_mysql.patch" dir="source/litesql-src-0.3.8" strip="0"/>
                <patch patchfile="src/patch/litesql_CMakeLists.patch" dir="source/litesql-src-0.3.8" strip="0"/>
                <patch patchfile="src/patch/litesql_mysql_thread.patch" dir="source/litesql-src-0.3.8" strip="0"/>-->
                <!--<patch patchfile="src/patch/litesql_full_2.patch" dir="source/litesql-src-0.3.8" strip="0"/>-->
		    <copy todir="${project.basedir}/win32">
                  <fileset dir="${project.basedir}/target/dependency/win32"/>
                </copy>

                <exec executable="cmake" dir="source/litesql-src-0.3.8/build" failonerror="yes">
                  <arg line="
                    -G ${CMAKE_MAKE_PROGRAM}
                    -DCMAKE_INSTALL_PREFIX=${project.basedir}/source/build/litesql 
                    -DCMAKE_BUILD_TYPE=${build_type} 
                    -DSHARED_LIBS=Off 
                    -DWITH_MYSQL=Off
                    -DWITH_SQLITE3=On
                    .."/>
                </exec>
                <exec executable="${MAKE_EXECUTABLE}" dir="${project.basedir}/source/litesql-src-0.3.8/build" failonerror="yes">
                  <arg line="install"/>
                </exec>
                <patch patchfile="src/patch/litesql_include.patch" dir="source/build/litesql" strip="0"/>


                <!--<patch patchfile="src/patch/boost_1_36_0_c++0x.patch" dir="source" strip="0"/>
                <exec executable="${project.basedir}/source/boost_1_36_0/tools/jam/${jambuild}" dir="source/boost_1_36_0/tools/jam"/>
                <exec executable="tools/jam/stage/bin.${target}/bjam" dir="source/boost_1_36_0">
                  <arg line=""/>
                </exec>
-->
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <id>build-release</id>
            <phase>package</phase>
            <goals>
              <goal>attached</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>assembly/release-litesql.xml</descriptor>
              </descriptors>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.esb.mysql</groupId>
      <artifactId>mysql</artifactId>
      <version>5.1.48</version>
      <type>zip</type>
      <classifier>${my.family}-${build_type}</classifier>
    </dependency>
    <dependency>
      <groupId>org.esb.expat</groupId>
      <artifactId>expat</artifactId>
      <version>2.0.1</version>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>org.esb.sqlite</groupId>
      <artifactId>sqlite</artifactId>
      <version>3.7.2</version>
      <classifier>${my.family}-${build_type}</classifier>
      <type>zip</type>
    </dependency>
  </dependencies>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>
