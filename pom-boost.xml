<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <profiles>
    <profile>
      <id>win32</id>
      <activation>
        <os>
          <family>windows</family>
          <arch>x86</arch>
        </os>
      </activation>
      <properties>
	  <boost.toolset>msvc</boost.toolset>
        <my.family>win32</my.family>
        <target>ntx86</target>
        <jambuild>build_dist.bat</jambuild>
      </properties>
    </profile>
    <profile>
      <id>linux</id>
      <activation>
        <os>
          <name>Linux</name>
          <family>unix</family>
        </os>
      </activation>
      <properties>
	  <boost.toolset>gcc</boost.toolset>
        <my.family>linux</my.family>
        <target>linuxx86*</target>
        <jambuild>build_dist.sh</jambuild>
      </properties>
    </profile>
    <profile>
      <id>macosx</id>
      <activation>
        <os>
          <family>mac</family>
        </os>
      </activation>
      <properties>
	  <boost.toolset>darwin</boost.toolset>
        <my.family>mac</my.family>
        <target>macosxx86</target>
        <jambuild>build_dist.sh</jambuild>
      </properties>
    </profile>
    <profile>
      <id>solaris</id>
      <activation>
        <os>
          <name>Solaris</name>
          <family>unix</family>
        </os>
      </activation>
      <properties>
        <my.family>solaris</my.family>
        <target>solaris</target>
        <jambuild>build_dist.sh</jambuild>
      </properties>
    </profile>
  </profiles>
  <!--
  <parent>
    <artifactId>JHive</artifactId>
    <groupId>org.esb.jhive</groupId>
    <version>0.1.0</version>
  </parent>-->
  <groupId>org.esb.boost</groupId>
  <artifactId>boost</artifactId>
  <version>1.36.0-1</version>
  <name>boost</name>
  <url>http://maven.apache.org</url>
  <distributionManagement>
    <repository>
      <id>ftp-repository</id>
      <url>ftp://codergrid.de</url>
    </repository>
  </distributionManagement>
  <build>
    <extensions>
      <!-- Enabling the use of FTP -->
      <extension>
        <groupId>org.apache.maven.wagon</groupId>
        <artifactId>wagon-ftp</artifactId>
        <version>1.0-beta-6</version>
      </extension>
    </extensions>
    <plugins>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.4</version>
        <dependencies>
          <dependency>
            <groupId>org.apache.ant</groupId>
            <artifactId>ant-junit</artifactId>
            <version>1.8.1</version>
          </dependency>
        </dependencies>
        <executions>
          <execution>
            <phase>generate-sources</phase>
            <configuration>
              <tasks>
                <mkdir dir="source"/>
                <mkdir dir="source/build"/>
                <get src="http://dfn.dl.sourceforge.net/project/boost/boost/1.36.0/boost_1_36_0.tar.bz2"
                     dest="source/boost_1_36_0.tar.bz2"
                     verbose="true" usetimestamp="true"/>
                <bunzip2 src="source/boost_1_36_0.tar.bz2" dest="source"/>
                <!-- the untar task does not preserve the file attributes like execution flags-->
		    <!--<untar src="source/boost_1_36_0.tar" dest="source" overwrite="false"/>-->
                <exec executable="tar" dir="source">
                  <arg line="-xf boost_1_36_0.tar"/>
                </exec>
                <patch patchfile="src/patch/boost_1_36_0_c++0x.patch" dir="source" strip="0"/>
			
			
                <exec executable="${project.basedir}/source/boost_1_36_0/tools/jam/${jambuild}" dir="source/boost_1_36_0/tools/jam" failonerror="no">
                </exec>
			<path id="bjam.path">
    				<fileset dir="${project.basedir}/source/boost_1_36_0/tools/jam/stage/" includes="bin.*/bjam*"/>
  			</path>
			<fileset dir="${project.basedir}/source/boost_1_36_0/tools/jam/stage/" id="libs" >
			<include name="**/bjam*"/>
			</fileset>   
			<property name="bjam" refid="bjam.path"/>
			
                <exec executable="${bjam}" dir="source/boost_1_36_0"  failonerror="no">
                  <arg line="--prefix=${project.basedir}/source/build/boost --toolset=${boost.toolset} --without-python --without-wave --without-graph --without-mpi --without-math variant=${build_type} link=static threading=multi install"/>
                </exec>

              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <id>build-release</id>
            <phase>package</phase>
            <goals>
              <goal>attached</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>assembly/release-boost.xml</descriptor>
              </descriptors>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <boost.version>1.36.0</boost.version>
  </properties>
</project>
