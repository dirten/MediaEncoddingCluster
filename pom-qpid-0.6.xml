<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <profiles>
    <profile>
      <id>win32</id>
      <activation>
        <os>
          <family>windows</family>
          <arch>x86</arch>
        </os>
      </activation>
      <properties>
        <my.family>win32</my.family>
        <target>ntx86</target>
        <BOOST_COMPILER>-vc90</BOOST_COMPILER>
	  <CXX_FLAGS>"-DWIN32 -D_WINDOWS -W3 -Zm1000 -EHsc -GR -DWIN32_LEAN_AND_MEAN"</CXX_FLAGS>
	<!--_WINSOCKAPI_-->
	<!--WIN32_LEAN_AND_MEAN-->
        <MAKE_EXECUTABLE>nmake</MAKE_EXECUTABLE>
        <CMAKE_MAKE_PROGRAM>"NMake Makefiles"</CMAKE_MAKE_PROGRAM>
      </properties>
    </profile>
    <profile>
      <id>linux</id>
      <activation>
        <os>
          <name>Linux</name>
          <family>unix</family>
        </os>
      </activation>
      <properties>
        <my.family>linux</my.family>
        <target>linuxx86</target>
        <BOOST_COMPILER>-gcc41</BOOST_COMPILER>
	  <CXX_FLAGS></CXX_FLAGS>
        <MAKE_EXECUTABLE>make</MAKE_EXECUTABLE>
        <CMAKE_MAKE_PROGRAM>"Unix Makefiles"</CMAKE_MAKE_PROGRAM>
      </properties>
    </profile>
    <profile>
      <id>macosx</id>
      <activation>
        <os>
          <family>mac</family>
        </os>
      </activation>
      <properties>
        <my.family>mac</my.family>
        <target>macosxx86</target>
        <BOOST_COMPILER>-xgcc40</BOOST_COMPILER>
	  <CXX_FLAGS></CXX_FLAGS>
        <MAKE_EXECUTABLE>make</MAKE_EXECUTABLE>
        <CMAKE_MAKE_PROGRAM>"Unix Makefiles"</CMAKE_MAKE_PROGRAM>
      </properties>
    </profile>
    <profile>
      <id>solaris</id>
      <activation>
        <os>
          <name>Solaris</name>
          <family>unix</family>
        </os>
      </activation>
      <properties>
        <my.family>solaris</my.family>
        <target>solaris</target>
	  <CXX_FLAGS></CXX_FLAGS>
        <jambuild>build_dist.sh</jambuild>
        <CMAKE_MAKE_PROGRAM>"Unix Makefiles"</CMAKE_MAKE_PROGRAM>
      </properties>
    </profile>
  </profiles>
  <!--
  <parent>
    <artifactId>JHive</artifactId>
    <groupId>org.esb.jhive</groupId>
    <version>0.1.0</version>
  </parent>-->
  <groupId>org.esb.qpid</groupId>
  <artifactId>qpid</artifactId>
  <version>0.6</version>
  <name>qpid</name>
  <url>http://maven.apache.org</url>
  <distributionManagement>
    <repository>
      <id>ftp-repository</id>
      <url>ftp://codergrid.de</url>
    </repository>
  </distributionManagement>
  <repositories>
    <repository>
      <id>esb-repo</id>
      <url>http://codergrid.de/repository</url>
    </repository>
  </repositories>
                        
  <build>
    <extensions>
      <!-- Enabling the use of FTP -->
      <extension>
        <groupId>org.apache.maven.wagon</groupId>
        <artifactId>wagon-ftp</artifactId>
        <version>1.0-beta-6</version>
      </extension>
    </extensions>
    <plugins>
    <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>unpack-dependencies</id>
            <phase>compile</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <includeTypes>zip</includeTypes>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.4</version>
        <dependencies>
          <dependency>
            <groupId>org.apache.ant</groupId>
            <artifactId>ant-junit</artifactId>
            <version>1.8.1</version>
          </dependency>
        </dependencies>
        <executions>
          <execution>
            <phase>compile</phase>
            <configuration>
              <tasks>
                <mkdir dir="source"/>
                <mkdir dir="source/build"/>
                <get src="http://mirror.netcologne.de/apache.org//qpid/0.6/qpid-cpp-0.6.tar.gz"
                     dest="source/qpid-cpp-0.6.tar.gz"
                     verbose="true" usetimestamp="true"/>
                <gunzip src="source/qpid-cpp-0.6.tar.gz" dest="source"/>
		    <untar src="source/qpid-cpp-0.6.tar" dest="source" overwrite="true"/>
                <mkdir dir="source/qpidc-0.6/build"/>
                <mkdir dir="source/patch"/>
                <bunzip2 src="src/patch/qpidc-0.6-no-tss.patch.bz2" dest="source/patch"/>
                <!--<patch patchfile="source/patch/qpidc-0.6-no-tss.patch" dir="source/qpidc-0.6" strip="1"/>-->
                <patch patchfile="src/patch/qpidc-0.6-src-CMakeLists.patch" dir="source/qpidc-0.6" strip="1"/>
                <patch patchfile="src/patch/qpidc-0.6-src-tests-CMakeLists.patch" dir="source/qpidc-0.6" strip="1"/>

                <exec executable="cmake" dir="source/qpidc-0.6" failonerror="on">
                  <arg line="
                    -G ${CMAKE_MAKE_PROGRAM}
                    -DCMAKE_INSTALL_PREFIX=${project.basedir}/source/build/qpid
                    -DCMAKE_BUILD_TYPE=${build_type} 
                    -DSHARED_LIBS=Off 
                    -DBOOST_ROOT=${project.build.directory}/dependency
                    -DBoost_USE_STATIC_LIBS=On
                    -DBUILD_TESTS=Off
		    -DCMAKE_CXX_FLAGS=${CXX_FLAGS}"/>
                </exec>
                <exec executable="${MAKE_EXECUTABLE}" dir="${project.basedir}/source/qpidc-0.6" failonerror="on">
                  <arg line="install"/>
                </exec>

              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <id>build-release</id>
            <phase>package</phase>
            <goals>
              <goal>attached</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>assembly/release-wt.xml</descriptor>
              </descriptors>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
      <dependency>
      <groupId>org.esb.boost</groupId>
      <artifactId>boost</artifactId>
      <version>1.44.0</version>
      <type>zip</type>
      <classifier>${my.family}-${build_type}</classifier>
    </dependency>
  </dependencies>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>
