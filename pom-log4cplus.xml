<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <profiles>
    <profile>
      <id>win32</id>
      <activation>
        <os>
          <family>windows</family>
          <arch>x86</arch>
        </os>
      </activation>
      <properties>
        <build.win32>1</build.win32>
        <my.family>win32</my.family>
        <target>ntx86</target>
        <BOOST_COMPILER>vc90</BOOST_COMPILER>
        <MAKE_EXECUTABLE>nmake</MAKE_EXECUTABLE>
        <CMAKE_MAKE_PROGRAM>"NMake Makefiles"</CMAKE_MAKE_PROGRAM>
      </properties>
    </profile>
    <profile>
      <id>linux</id>
      <activation>
        <os>
          <name>Linux</name>
          <family>unix</family>
        </os>
      </activation>
      <properties>
        <build.unix>1</build.unix>
        <my.family>linux</my.family>
        <target>linuxx86</target>
        <BOOST_COMPILER>gcc41</BOOST_COMPILER>
        <MAKE_EXECUTABLE>make</MAKE_EXECUTABLE>
        <CMAKE_MAKE_PROGRAM>"Unix Makefiles"</CMAKE_MAKE_PROGRAM>
      </properties>
    </profile>
    <profile>
      <id>macosx</id>
      <activation>
        <os>
          <family>mac</family>
        </os>
      </activation>
      <properties>
        <build.unix>1</build.unix>
        <my.family>mac</my.family>
        <target>macosxx86</target>
        <BOOST_COMPILER>gcc40</BOOST_COMPILER>
        <MAKE_EXECUTABLE>make</MAKE_EXECUTABLE>
        <CMAKE_MAKE_PROGRAM>"Unix Makefiles"</CMAKE_MAKE_PROGRAM>
      </properties>
    </profile>
    <profile>
      <id>solaris</id>
      <activation>
        <os>
          <name>Solaris</name>
          <family>unix</family>
        </os>
      </activation>
      <properties>
        <my.family>solaris</my.family>
        <target>solaris</target>
        <jambuild>build_dist.sh</jambuild>
        <CMAKE_MAKE_PROGRAM>"Unix Makefiles"</CMAKE_MAKE_PROGRAM>
      </properties>
    </profile>
  </profiles>
