  <groupId>org.esb.log4cplus</groupId>
  <artifactId>log4cplus</artifactId>
  <version>1.0.4</version>
  <name>log4cplus</name>
  <url>http://maven.apache.org</url>
  <distributionManagement>
    <repository>
      <id>ftp-repository</id>
      <url>ftp://codergrid.de</url>
    </repository>
  </distributionManagement>
  <repositories>
    <repository>
      <id>esb-repo</id>
      <url>http://codergrid.de/repository</url>
    </repository>
  </repositories>
                        
  <build>
    <extensions>
      <!-- Enabling the use of FTP -->
      <extension>
        <groupId>org.apache.maven.wagon</groupId>
        <artifactId>wagon-ftp</artifactId>
        <version>1.0-beta-6</version>
      </extension>
    </extensions>
    <plugins>
    <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>unpack-dependencies</id>
            <phase>compile</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <includeTypes>zip</includeTypes>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.4</version>
        <dependencies>
          <dependency>
            <groupId>org.apache.ant</groupId>
            <artifactId>ant-junit</artifactId>
            <version>1.8.1</version>
          </dependency>
        </dependencies>
        <executions>
          <execution>
            <phase>compile</phase>
            <id>build_win32</id>
            <configuration>
              <tasks >
                <mkdir dir="source"/>
                <mkdir dir="source/build"/>
                <mkdir dir="source/log4cplus"/>
                <mkdir dir="source/log4cplus/build"/>
                <get src="http://downloads.sourceforge.net/project/log4cplus/log4cplus-stable/1.0.4/log4cplus-1.0.4.tar.bz2"
                     dest="source/log4cplus-1.0.4.tar.bz2"
                     verbose="true" usetimestamp="true"/>
                <bunzip2 src="source/log4cplus-1.0.4.tar.bz2" dest="source"/>
                <exec executable="tar" dir="source" failonerror="on">
                  <arg line="-xf log4cplus-1.0.4.tar --strip=1 --directory=log4cplus"/>
                </exec>

                <patch patchfile="src/patch/CMakeLists.log4cplus" dir="source/log4cplus" strip="0"/>

                <pathconvert property="mybasedir" targetos="unix">
                  <path location="${project.basedir}"/>
                </pathconvert>
		<echo message="using basedir: ${mybasedir}"/>
                <exec executable="cmake" dir="source/log4cplus/build" failonerror="on">
                  <arg line="
                    -G ${CMAKE_MAKE_PROGRAM}
                    -DCMAKE_INSTALL_PREFIX=${project.basedir}/source/build/log4cplus 
                    -DCMAKE_BUILD_TYPE=${build_type} 
                    -DSHARED_LIBS=On
                    -DCMAKE_OSX_ARCHITECTURES=i386
                    .."/>
                </exec>
                
                <exec executable="${MAKE_EXECUTABLE}" dir="source/log4cplus/build" failonerror="on">
                <arg line="install"/>
                </exec>

              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
          <execution>
            <phase>compile</phase>
	    <id>build_unix</id>
            <configuration>
              <tasks unless="build.unix">
                <mkdir dir="source"/>
                <mkdir dir="source/build"/>
                <mkdir dir="source/log4cplus"/>
                <mkdir dir="source/log4cplus/build"/>
                <get src="http://downloads.sourceforge.net/project/log4cplus/log4cplus-stable/1.0.4/log4cplus-1.0.4.tar.bz2"
                     dest="source/log4cplus-1.0.4.tar.bz2"
                     verbose="true" usetimestamp="true"/>
                <bunzip2 src="source/log4cplus-1.0.4.tar.bz2" dest="source"/>
                <exec executable="tar" dir="source" failonerror="on">
                  <arg line="-xf log4cplus-1.0.4.tar --strip=1 --directory=log4cplus"/>
                </exec>

                <patch patchfile="src/patch/CMakeLists.log4cplus" dir="source/log4cplus" strip="0"/>

                <pathconvert property="mybasedir" targetos="unix">
                  <path location="${project.basedir}"/>
                </pathconvert>
		<echo message="using basedir: ${mybasedir}"/>
		<exec executable="sh" dir="source/log4cplus/build" failonerror="on"> 
		    <arg line="${mybasedir}/source/log4cplus/configure --prefix=${mybasedir}/source/build/log4cplus --disable-static --enable-shared"/> 
		</exec>
                
                <exec executable="${MAKE_EXECUTABLE}" dir="source/log4cplus/build" failonerror="on">
                <arg line="install"/>
                </exec>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <id>build-release</id>
            <phase>package</phase>
            <goals>
              <goal>attached</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>assembly/release-log4cplus.xml</descriptor>
              </descriptors>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>
